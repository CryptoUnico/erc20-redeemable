{
  "name": "erc20-redeemable",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "precompile": "rimraf ./build/",
    "compile": "waffle",
    "pretest": "yarn compile",
    "test": "truffle test",
    "compile-contracts": "truffle compile",
    "migrate-contracts": "truffle migrate",
    "deploy-contracts": "truffle deploy",
    "deploy-contracts-from-docker": "truffle deploy --network dockerGanache",
    "install:lint": "npm i -g eslint",
    "configure:lint": "eslint --init",
    "lint": "eslint scripts",
    "lint:fix": "npm run lint -- --fix",
    "lint:sol": "solium -d ./contracts",
    "console": "truffle console",
    "networks": "truffle networks",
    "disburse": "truffle exec scripts/disburse.js",
    "calculateProof": "truffle exec scripts/calculateProof.js",
    "generate:test": "ts-node scripts/generate-merkle-root.ts --input scripts/data/claims_test.json",
    "generate:example": "ts-node scripts/generate-merkle-root.ts --input scripts/data/claims_example.json",
    "verify:test": "ts-node scripts/verify-merkle-root.ts --input scripts/data/result_test.json",
    "verify:example": "ts-node scripts/verify-merkle-root.ts --input scripts/data/result_example.json"
  },
  "devDependencies": {
    "@openzeppelin/test-helpers": "^0.5.6",
    "@types/chai": "^4.2.6",
    "@types/lodash": "^4.14.165",
    "@types/mocha": "^5.2.7",
    "@types/node": "^14.14.3",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.14.2",
    "axios": "^0.20.0",
    "babel-eslint": "^10.0.3",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "chai": "^4.2.0",
    "commander": "^6.1.0",
    "eslint": "^7.19.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-babel": "^4.1.2",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^7.0.0",
    "eslint-plugin-promise": "^4.0.0",
    "eslint-plugin-standard": "^4.0.0",
    "eslint-plugin-vue": "^7.5.0",
    "eth-gas-reporter": "^0.2.20",
    "ethereum-waffle": "^3.0.0",
    "ethereumjs-util": "^7.0.4",
    "husky": "^1.1.2",
    "jest-junit": "^3.1.0",
    "lint-staged": "^7.3.0",
    "mocha": "^6.2.2",
    "node-fetch": "^2.6.1",
    "prettier": "1.14.3",
    "rimraf": "^3.0.0",
    "solium": "^1.1.8",
    "truffle-assertions": "^0.9.2",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^3.1.0",
    "@truffle/hdwallet-provider": "^1.0.29",
    "bn.js": "^4.11.0",
    "dotenv": "^8.2.0",
    "ethereumjs-util": "^7.0.4",
    "graphql": "^15.4.0",
    "graphql-request": "^3.3.0",
    "lodash": "^4.17.20",
    "node-fetch": "^2.6.1",
    "truffle": "^5.1.39",
    "web3": "^1.3.0",
    "web3-utils": "^1.3.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  }
